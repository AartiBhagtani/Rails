  <% @signups.each do |p| %>
    <div class="card">
      <div class="card-body">
        <p><%= p.email %></p>
        <h6 align="right"">~<%= p.first_name %></h6>
      </div>
    </div>
  <% end %>
  <br>
  <%= @signups.size %> happy hearts and counting...
</div>